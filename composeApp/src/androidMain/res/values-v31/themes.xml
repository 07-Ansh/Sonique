<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Splash Screen Theme with Black Background for API 31+ -->
    <style name="Theme.Sonique.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.AppCompat.DayNight.NoActionBar</item>
        <item name="android:windowSplashScreenBrandingImage">@null</item>
    </style>
</resources>
